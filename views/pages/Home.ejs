<% layout("/layouts/boilerplate.ejs") %>

<div class="d-flex justify-content-start flex-wrap">
  <% for(let i in companies) { let company = companies[i]%>
  <div class="card m-5" style="width: 20rem">
    <img src="<%= company.file.image.url %>" class="card-img border-bottom" alt="<%= company.file.image.filename %>" />

    <div class="card-body w-75  d-flex justify-content-between flex-column">
      <div class="card-content mb-3">
        <h5 class="card-title">
          <%= company.name %>
          <hr class="hr" />
        </h5>
        <div class="card-text mt-4">
          <div class="row d-flex flex-column">
            <div class="col">
              <div class="label">Role:</div>
              <%= company.jd.position %>
            </div>
            <div class="col">
              <div class="label">Location:</div>
              <%= company.jd.location.city %>, <%= company.jd.location.state %>
            </div>
            <div class="col">
              <div class="label">Package:</div>
              <%= company.jd.package %>
            </div>
          </div>
        </div>
      </div>

      <div class="comp-buttons d-flex justify-content-around mb-3">
        <% if(currUser) {%>
        <% if( currUser.role === 0 ) { %>
        <a href="/company/about/<%= company._id  %>" class="btn btn-primary">Apply Now</a>
        <% } else {%>
        <a href="/company/about/<%= company._id  %>" class="btn btn-primary">About</a>
        <a href="/company/edit/<%= company._id  %>" class="btn btn-warning">Edit</a>
        <form action="/company/end/<%= company._id %>" method="post">
          <button class="btn btn-danger">
            End Drive
          </button>
        </form>
        <% } %>
        <% } else {%>
        <button type="button" class="btn btn-secondary" data-bs-toggle="popover" data-bs-title="Please Login" data-bs-content="Please login into an Account to interact">Account Not Logged In</button>
        <% } %>
      </div>
    </div>
  </div>
  <% } %>
</div>