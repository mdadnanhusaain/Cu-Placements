<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
  <div class="student-form col-8 offset-2 px-5 py-4">
    <h1 class="form-heading text-center">Add Company</h1>
    <br /><br />

    <form>
      <div class="row">
        <div class="label">
          <label for="" class="form-label"><h3>Company description</h3></label>
          <hr class="hr" />
        </div>
        <div class="mb-3 col-md-6">
          <label for="cname" class="form-label">Company Name</label>
          <input type="text" class="form-control" id="cname" />
        </div>
        <div class="mb-3 col-md-6">
          <label for="cweb" class="form-label">Company Website</label>
          <input type="text" class="form-control" id="cweb" />
        </div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-12">
          <label for="desc" class="form-label">About Company</label>
          <textarea class="form-control text-area" id="desc"></textarea>
        </div>
      </div>
      <div class="mt-3">
        <label for="" class="form-label"><h3>Eligibility</h3></label>
      </div>
      <hr class="hr" />
      <div class="row">
        <div class="mb-3 col-md-6">
          <label for="uname" class="form-label">University Name</label>
          <input type="text" class="form-control" id="uname" />
        </div>
        <div class="mb-3 col-md-6">
          <label for="cname" class="form-label">College Name</label>
          <input type="text" class="form-control" id="cname" />
        </div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-6">
          <label for="branch" class="form-label">Branch</label>
          <input type="text" class="form-control" id="branch" />
        </div>
        <div class="mb-3 col-md-6">
          <label for="stream" class="form-label">Stream</label>
          <input type="text" class="form-control" id="stream" />
        </div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="cgpa" class="form-label">CGPA</label>
          <input type="number" class="form-control" id="cgpa" />
        </div>
        <div class="mb-3 col-md-4">
          <label for="gap" class="form-label">Gap</label>
          <input type="number" class="form-control" id="gap" />
        </div>
        <div class="mb-3 col-md-4">
          <label for="batch" class="form-label">Batch</label>
          <input type="number" class="form-control" id="batch" />
        </div>
      </div>
      <br />
      <div class="row">
        <div class="label col-md-6">
          <label for="" class="form-label"><h4>10th Details</h4></label>
          <hr class="hr" />
        </div>
        <div class="label col-md-6">
          <label for="" class="form-label"><h4>12th Details</h4></label>
          <hr class="hr" />
        </div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-6">
          <label for="tenper" class="form-label">10th Percentage</label>
          <input type="number" class="form-control" id="tenper" />
        </div>
        <div class="mb-3 col-md-6">
          <label for="tweper" class="form-label">12th Percentage</label>
          <input type="number" class="form-control" id="tweper" />
        </div>
      </div>
      <div class="row mt-4">
        <div class="mb-3 col-md-6">
          <label for="tenb" class="form-label">10th Board</label>
          <input type="text" class="form-control" id="tenb" />
        </div>
        <div class="mb-3 col-md-6">
          <label for="tweb" class="form-label">12th Board</label>
          <input type="text" class="form-control" id="tweb" />
        </div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-6">
          <label for="tens" class="form-label">10th School</label>
          <input type="text" class="form-control" id="tens" />
        </div>
        <div class="mb-3 col-md-6">
          <label for="twes" class="form-label">12th School</label>
          <input type="text" class="form-control" id="twes" />
        </div>
      </div>
      <div class="row mt-4">
        <div class="label">
          <label for="" class="form-label"><h3>Residential Details</h3></label>
          <hr class="hr" />
        </div>
      </div>
      <div class="mb-3">
        <label for="address" class="form-label">Full Address</label>
        <input type="text" class="form-control" id="address" />
      </div>
      <div class="row">
        <div class="mb-3 col-md-6">
          <label for="city" class="form-label">City</label>
          <input type="text" class="form-control" id="city" />
        </div>
        <div class="mb-3 col-md-6">
          <label for="state" class="form-label">State</label>
          <input type="text" class="form-control" id="state" />
        </div>
      </div>
      <hr class="hr" />
      <div class="row">
        <div class="mb-3">
          <label for="resume" class="form-label">Resume</label>
          <input
            type="file"
            class="form-control"
            id="resume"
            accept="application/pdf"
          />
        </div>
      </div>
      <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1" />
        <label class="form-check-label" for="exampleCheck1">Remember me</label>
      </div>
      <button type="submit" class="btn btn-secondary">Submit</button>
    </form>
  </div>
</div>
