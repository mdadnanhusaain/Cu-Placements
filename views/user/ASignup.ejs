<% layout("/layouts/boilerplate.ejs") %>

<div class="admin-form col-6 offset-3 px-5 py-4">
  <h1 class="form-heading text-center">Admin SignUp</h1>
  <hr class="hr mb-4" />
  <form action="/admin/signup" method="post" class="needs-validation" novalidate>
    <div class="row">
      <div class="mb-3">
        <label for="name" class="form-label required">Full Name</label>
        <input type="text" class="form-control" id="name" name="admin[name]" required />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label required">Email address</label>
        <input type="email" class="form-control" id="email" name="admin[email]" required />
      </div>
      <div class="mb-3">
        <label for="username" class="form-label required">Employee ID</label>
        <input type="text" class="form-control" id="username" name="admin[username]" required />
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label required">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" name="admin[password]" required />
      </div>
      <div class="mb-4">
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="remember-me" required />
          <label class="form-check-label required" for="remember-me">Remember me</label>
        </div>
      </div>
      <button type="submit" class="btn btn-danger">Submit</button>
    </div>
  </form>
</div>