<% layout("/layouts/boilerplate.ejs") %> <% layout("/layouts/boilerplate.ejs")
%>

<div class="row">
  <div class="student-form col-md-4 offset-md-4 px-5 py-4">
    <h1 class="form-heading text-center">
      <div>Student Login</div>
    </h1>
    <hr class="hr" />

    <br />

    <form
      action="/student/login"
      method="POST"
      class="needs-validation"
      novalidate
    >
      <div class="row">
        <div class="mb-3">
          <label for="username" class="form-label">UID</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
          />
        </div>
      </div>
      <div class="row">
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
          />
        </div>
      </div>
      <br />
      <button type="submit" class="btn btn-secondary">Submit</button>
    </form>
  </div>
</div>
